
.containers{
  width: 100vw;
  height: 100vh;
   /* padding: 0 15px;  */
  box-sizing: border-box;
  color: #333;
}
.fontsize{
  font-size: 24rpx;
}
.ulev-4{
  font-size: 0.6rem;
}

.content4{
	width: 100%;
	padding: 1rem 0;
  padding-top: 2rem;
	background-color: white;
}
.ct4{
	width: 25%;
	text-align: center;
	position: relative;
  z-index: 2;
}

.status_img{
	width: 30rpx;
	height: 30rpx;
  z-index: 2;
}
.status_img_xiao{
  width: 10rpx;
  height: 30rpx;
  z-index: 2;
}
.ct4 p{
	width: calc(100% - 0.185rem);
	height: 2px;
	position: absolute;
	top: 56rpx;
	left: calc(50% + 0.15rem);
  z-index: -1;
}

.cont{
  padding: 0 15px;
}

.cont1{
	line-height: 1.1rem;
}

.cont1 image{
	display: block;
	width: 1.2rem;
	height: 1.2rem;
	margin-right: 0.3rem;
}
.cont1 span{
  line-height:1.25rem;
}

.cont1 b{
	color: #ff8a01;
	margin: 0 5px;
}
.cont>span{
	display: block;
	line-height: 1.25rem;
}

.cont12{
	width: calc(100% - 3rem);
}

.span2{
	width: 4rem;
	color: #666666;
}



.content2{
	border-bottom: 1px solid gainsboro;
	background-color: white;
}
.cont3{
	width: calc(100% - 15px);
	margin-left: 15px;
	padding-right: 15px;
	line-height: 3.0rem;
	border-bottom: 1px solid #EEEEEE;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.cont3.noborderbottom{
	border-bottom: none;
}
.cont3:last-child{
	border-bottom: none;
}
.cont3 span:last-child{
	max-width: calc(100% - 5rem);
}
.cont3 span:last-child.lineheight{
	line-height: 1.2rem;
	margin-top: 0.5rem;
}
.materials span:last-child b{
	position: relative;
	padding: 0.5rem;
}
.materials span:last-child b>img{
	width: 1rem;
	height: 1rem;
	position: absolute;
	top: 0.5rem;
	right: 0;
}

.cont3>img{
	width: 31%;
	padding: 0 1%;
}
.cont3 .qianzi{
	display: block;
	height: 2.2rem;
}


.jiange{
  width: 750rpx;
