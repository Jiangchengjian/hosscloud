.containers{
  width: 100vw;
  /* height:calc(100vh - 103px); */
  padding-top: 0rpx;
  background-color:white;
 
}
.userinfo {
  display: flex; 
  flex-direction: column; 
  align-items: center;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx 40rpx;
  margin-top: 80rpx;
  border-radius: 50%;
  border:4px solid #fff;
  box-shadow:0px 2px 8px #ccc;
}

.userinfo-nickname {
  color: #000;
  line-height: 100rpx;
}

.usermotto {
  margin-top: 0rpx;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  border-top: 20rpx solid #EEE;
}

.cont{
  border-bottom: 1px solid #eee;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.cont:last-child{
  border: none;
}
.cont image{
  width: 40rpx;
  height: 40rpx;
}
.cont span{
  margin-left: 30rpx;
  line-height: 40rpx;
}

.cont .status_img_jiantou{
  display: block;
  width: 40rpx;
  height:40rpx;
  margin-top: 4rpx;
}

.signout{
  text-align: center;
  line-height: 80rpx;
} 
